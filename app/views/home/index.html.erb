<h1>Stocking</h1>

<%= form_tag root_path, :method => 'POST' do %>
	<%= text_field_tag 'ticker', nil, placeholder: "Enter Ticker Symbol", size: 50 %>
	<%= submit_tag 'Lookup' %>
<% end %>


<br/>

<% if @stock %>
	Company: <%= @stock.company_name %><br/>
	Latest price: $<%= @stock.latest_price %><br/>
<% elsif @nothing %>
	<%= @nothing %>
<% elsif @error %>
    <%= @error %>
<% end %>


